<div id="chatroom_container" class="row bg-dark text-light">
  <div id="side_panel" class="col-md-4 col-sm-4"><br>
    <h5 class="text-center "> Hi <%= @current_user.email %> </h5><br>
    <h1 class="text-center text-primary">Chat with </h1>
    <hr/>
    <%= turbo_stream_from "users" %>
    <div id="users">
      <ul class="list-group ">
        <%= render @users %>
      </ul>
    </div>
    <%# <h4> Rooms </h4>
    <%= render partial: "layouts/new_room_form" %>
    <%# <%= turbo_stream_from "rooms" %> 
    <%# <div id="rooms">
      <ul class="list-group">
        <%= render @rooms %>
      <%# </ul>
    </div>   %>
  </div>

  <div id="room_container"
  class="col-md-8 col-sm-8 bg-dark text-light">
    <% if @single_room %>

      <div id="single_room">
      
        <h3 class="text-center text-primary"> <%= @user&.email || @single_room.name %> </h3>
        <%= turbo_stream_from @single_room %>
        <h4 id="messages" data-controller="scroll">
          <%= render @messages %>
        </h4>
        <%= render 'layouts/new_message_form' %>
        
      </div>
    <% end %>
  </div>
</div>